@model TODOList.Models.Task
@{
    ViewData["Title"] = "Edit";
    ViewBag.Title = "Edit Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <h3>TODO List</h3>

        @using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()

        <input type="text" id="title" name="title" value="@Model.Title" class="form-control" />
        <input type="submit" value="Edit Task" class="btn btn-default" />
        <input type="reset" style="display:inline" value="Cancel" class="btn btn-default" onclick="location.href='/';return false;" />
}
    </div>
</div>